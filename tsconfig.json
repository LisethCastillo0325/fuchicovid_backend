{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6"
         ],
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}